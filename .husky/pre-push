#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-push checks..."

# Type check
echo "📝 Type checking..."
npm run type-check || {
  echo "❌ Type check failed. Fix TypeScript errors before pushing."
  exit 1
}

# Build check
echo "🏗️ Building project..."
npm run build || {
  echo "❌ Build failed. Fix build errors before pushing."
  exit 1
}

# Format check
echo "💅 Checking formatting..."
npm run format:check || {
  echo "⚠️ Formatting issues found. Run 'npm run format' to fix."
  exit 1
}

echo "✅ All pre-push checks passed!"
